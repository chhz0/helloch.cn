{
  "compilerOptions": {
    "module": "esnext",
    "target": "esNext",
    "types": ["vite/client"],
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./docs/.vitepress/*"]
    }
  },
  "include": ["docs/.vitepress/**/*"],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "template",
    "bin",
    "docs/snippets",
    "scripts"
  ]
}
